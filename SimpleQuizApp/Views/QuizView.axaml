<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SimpleQuizApp.ViewModels"
             xmlns:components="clr-namespace:SimpleQuizApp.Views.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SimpleQuizApp.Views.QuizView"
             x:DataType="vm:QuizViewModel">
    <StackPanel Spacing="20">
        <TextBlock Text="{Binding Title}" FontSize="28" FontWeight="Bold" />
        <components:ImageComponent Source="{Binding CoverImageSrc}"
                                   HasImage="{Binding HasImage}"
                                   AspectRatio="3,4" />
        <TextBlock Text="{Binding Description}" />
        <components:VariantButton Command="{Binding StartQuizCommand}"
                                  Content="Starta Quiz" Color="Primary"
                                  Size="Medium" 
                                  HorizontalAlignment="Left"/>
    </StackPanel>
</UserControl>