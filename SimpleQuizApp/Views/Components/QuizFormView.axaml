<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SimpleQuizApp.ViewModels.Components"
             xmlns:components="clr-namespace:SimpleQuizApp.Views.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SimpleQuizApp.Views.Components.QuizFormView"
             x:DataType="vm:QuizFormViewModel">

    <StackPanel Spacing="30">
        <StackPanel Spacing="20">
            <TextBlock
                FontSize="28"
                FontWeight="Bold"
                Text="{Binding ViewHeader}" />
            <TextBlock Foreground="Gray" Text="{Binding ViewDescription}" />
        </StackPanel>

        <StackPanel Spacing="10">
            <TextBlock FontSize="24" FontWeight="Bold">Grundläggande information</TextBlock>
            <Border BorderThickness="2" BorderBrush="Black" Padding="20"
                    CornerRadius="20" Background="White">
                <StackPanel Spacing="20">
                    <TextBlock FontSize="24" FontWeight="Bold">Titel och beskrivning</TextBlock>
                    <components:InputFieldView
                        Label="Titel*"
                        Description="Vad ska ditt Quiz heta?"
                        Text="{Binding Title, Mode=TwoWay}" />
                    <components:InputFieldView
                        Label="Kategori*"
                        Description="Vilken kategori tillhör ditt Quiz?"
                        Text="{Binding Category, Mode=TwoWay}" />
                    <components:InputFieldView
                        Label="Beskrivning*"
                        Description="Beskriv kort vad quizet innehåller för frågor."
                        Text="{Binding Description, Mode=TwoWay}" />

                    <components:ImageUploadView
                        DataContext="{Binding CoverImageUpload}" />

                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Spacing="10">
            <TextBlock FontSize="24" FontWeight="Bold">Frågor</TextBlock>
            <ItemsControl ItemsSource="{Binding QuestionCards}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="20" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <components:QuestionCardView
                            DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <components:VariantButton Content="Lägg till"
                                      Command="{Binding AddQuestionCommand}"
                                      HorizontalAlignment="Left" />

            <components:ErrorMessageView
                IsVisible="{Binding IsAllQuestionFieldsErrorVisible}"
                Message="{Binding AllQuestionFieldsErrorMessage}" />
            <components:ErrorMessageView
                IsVisible="{Binding IsMaxQuestionsVisible}"
                Message="{Binding MaxQuestionsErrorMessage}" />
        </StackPanel>

        <Grid ColumnDefinitions="*, Auto">
            <components:VariantButton
                Content="Spara Quiz" Color="Primary"
                Command="{Binding SaveQuizCommand}"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" />
            <components:VariantButton
                Grid.Column="1"
                Content="Radera Quiz"
                Command="{Binding DeleteQuizCommand}"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Color="Danger"
                Size="Small" />
        </Grid>

        <components:ErrorMessageView
            IsVisible="{Binding IsMinQuestionsErrorVisible}"
            Message="{Binding MinQuestionsErrorMessage}" />
        <components:ErrorMessageView
            IsVisible="{Binding IsAllFieldsErrorVisible}"
            Message="{Binding IsValidErrorMessage}" />
    </StackPanel>
</UserControl>