<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:components="clr-namespace:SimpleQuizApp.Views.Components"
             xmlns:vm="using:SimpleQuizApp.ViewModels.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SimpleQuizApp.Views.Components.QuizCardView"
             x:DataType="vm:QuizCardViewModel">
    <Button Command="{Binding OpenQuizViewCommand}"
            Background="Transparent"
            BorderThickness="0"
            Padding="0"
            CornerRadius="20"
            Classes="flat"
            Cursor="Hand">
        <Border BorderThickness="2" BorderBrush="Black" Padding="10"
                CornerRadius="20" ClipToBounds="True" x:Name="QuizCard">
            <Grid ColumnDefinitions="*, Auto"
                  RowDefinitions="7*, 3*" ColumnSpacing="10" RowSpacing="5">
                <Image Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"
                       Source="{Binding CoverImageSrc}"
                       Stretch="UniformToFill"
                       Margin="-10, -10, -10, 0" />
                <TextBlock Grid.Column="0" Grid.Row="1"
                           Text="{Binding Title}" FontWeight="Bold"
                           VerticalAlignment="Center" />
                <TextBlock Grid.Column="1" Grid.Row="1" Text="XP 40"
                           FontSize="18" FontWeight="Bold"
                           VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Button>
</UserControl>