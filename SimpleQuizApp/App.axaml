<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SimpleQuizApp.App"
             xmlns:local="using:SimpleQuizApp"
             xmlns:viewModels="clr-namespace:SimpleQuizApp.ViewModels"
             xmlns:views="clr-namespace:SimpleQuizApp.Views"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <DataTemplate DataType="viewModels:CreateQuizViewModel">
            <views:CreateQuizView/>
        </DataTemplate>

        <DataTemplate DataType="viewModels:EditQuizViewModel">
            <views:EditQuizView/>
        </DataTemplate>

        <DataTemplate DataType="viewModels:PlayQuizViewModel">
            <views:PlayQuizView/>
        </DataTemplate>

        <DataTemplate DataType="viewModels:HomeViewModel">
            <views:HomeView/>
        </DataTemplate>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>